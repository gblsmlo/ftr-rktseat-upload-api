{
	"name": "upload-widget-server",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "tsx watch --env-file .env src/infra/http/server.ts",
		"db:drift": "drizzle-kit diff:pg --schema src/infra/db/schema --out src/infra/db/migrations",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"check": "biome check .",
		"prepare": "husky",
		"test": "dotenv -e .env.test vitest run",
		"test:watch": "dotenv -e .env.test vitest watch"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx}": [
			"biome check --no-errors-on-unmatched",
			"biome check --write --no-errors-on-unmatched",
			"biome format --write --no-errors-on-unmatched",
			"biome lint --write --no-errors-on-unmatched"
		]
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.14.0",
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@tc96/biome-config": "^2.0.0",
		"@types/node": "^24.3.3",
		"drizzle-kit": "^0.31.4",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@fastify/cors": "^11.1.0",
		"@fastify/multipart": "^9.2.1",
		"@fastify/swagger": "^9.5.1",
		"@fastify/swagger-ui": "^5.2.3",
		"dotenv-cli": "^10.0.0",
		"drizzle-orm": "^0.44.5",
		"fastify": "^5.6.0",
		"fastify-type-provider-zod": "^6.0.0",
		"postgres": "^3.4.7",
		"vite-tsconfig-paths": "^5.1.4",
		"zod": "^4.1.8"
	}
}
